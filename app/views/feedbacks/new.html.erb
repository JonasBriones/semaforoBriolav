<h3>Entregar feedback</h3>

<table>
  <tr>
      <td>Nombre Completo :</td>
      <td><%= @poll.user.nombre %></td>
  </tr>
  <tr>
      <td>Rut :</td>
      <td><%= @poll.user.rut %></td>
  </tr>
  <tr>
      <td>Estado :</td>
      <td><%= @poll.state.descripcion %></td>
  </tr>
</table>

<hr>
<h4>Ultimas respuestas</h4>
  <% @poll.feedbacks.each do |p| %>
  <%= p.enviado_por%> -> <%= p.respuesta %> <br>
  <% end %>
<hr>
<%= form_for @feedback do |f| %>
  <%= f.hidden_field :poll_id, :value => @poll.id %>

  <div class="form-group col-md-3">
    <%= f.label :enviado_por, "Persona que responde" %><br>
    <%= f.select :enviado_por, [['Jefe', 'Jefe'], ['Supervisor', 'Supervisor'], ['Otro..', 'Otro']], {}, :class=> "form-control" %>
  </div>

  <div class="form-group col-md-3">
    <%= f.label :respuesta, "Respuestas" %><br>
    <%= f.text_area :respuesta, cols: 100, rows: 10 %>
  </div>

  <%= f.submit "Enviar", :class => "btn btn-primary" %>

<% end %>
