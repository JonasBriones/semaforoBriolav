<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
            <%= value %>
      </div>
<% end %>

<div class="justify-content-md-center">
            <div class="col align-self-center">
                <h1>¿How Are You?</h1>
            </div>
            <div class="col align-self-end">
                <p>¿Como Estás?</p>
            </div>
</div>

<%= form_for @poll do |f| %>
  <div class="form-row justify-content-md-center">
    <div class="form-group col-md-4">
      <%= f.label :nombre, "Nombre Completo" %>
      <%= f.text_field :nombre, placeholder: "Ej: Juan Pérez", class: "form-control", maxlength: 255, size: 30 %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :rut %>
      <%= f.text_field :rut, class: "form-control", placeholder: "12345678-9", maxlength: 10 %>
    </div>
  </div>
  <br>
  <div class="form-row justify-content-md-center">
      <div class="form-group col-md-3">
        <%= f.label :fnacimiento, "Fecha de Nacimiento" %><br>
        <%= f.date_field :fnacimiento, :id => "fnacimiento", class: "form-control"%>
      </div>
      <div class="form-group col-md-3">
        <%= f.label :genero, "Género" %><br>
        <%= f.select :genero, [['Hombre', 'Hombre'], ['Mujer', 'Mujer'], ['Otro..', 'Otro']], class: "form-control" %>
      </div>
  </div>

<div id="custom-radios">
    <%= f.collection_radio_buttons( :state_id, State.all, :id, :imagen
      ) do |b|
        b.label(:"id" => "label_color_#{b.object.id}") { image_tag(b.object.imagen) + b.radio_button }
      end
    %>
</div>

<hr>
<div id="mensaje_motivo">
  <h4 class="text_motivo"></h4>
  <div id="motivo" class="collapse">
      <%= f.label :motivo, "Seleccione el motivo" %></br>
      <%= f.select :motivo, [['Laboral', 'Laboral'], ['Personal', 'Personal'], ['Ambos', 'Ambos']] %>
  </div>
<br>
  <div id="agregar">
    <%= f.submit "Agregar"%>
  </div>
</div>

<% end %>

<%= link_to 'Ir a graficos', polls_path %>
<br>
<%= link_to 'Ir a feedbacks', feedbacks_path%>
