<h1>Semaforo</h1>

<%= form_for @poll do |f| %>
  <p>
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>

    <%= f.label :rut %>
    <%= f.text_field :rut %>
  </p>
  <p>
    <%= f.label :genero %>
    <%= f.select :genero, [['Hombre', true], ['Mujer', false]] %>
  </p>
  <p>
    <%= f.label :estado, "Bien" %>
    <%= f.radio_button :estado, '1'%>

    <%= f.label :estado, "Mas o Menos" %>
    <%= f.radio_button :estado, '0' %>

    <%= f.label :estado, "Mal" %>
    <%= f.radio_button :estado, '-1' %>
  </p>
  <div id="motivo">
  <%= f.label :motivo %>
  <%= f.text_area :motivo %>
</div>
  <p>
    <%= f.submit "Agregar"%>
  </p>


<%= render 'poll_details', :polls => @polls %>

<% end %>
